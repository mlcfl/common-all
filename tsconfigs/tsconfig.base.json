{
	"compilerOptions": {
		"outDir": "dist",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["src/*"],
			"common/all/*": ["node_modules/common-all/dist/*"],
			"common/be/*": ["node_modules/common-be/dist/*"],
			"common/fe/*": ["node_modules/common-fe/dist/*"],
			"common/*": ["node_modules/common/dist/*"]
		}
	}
}
